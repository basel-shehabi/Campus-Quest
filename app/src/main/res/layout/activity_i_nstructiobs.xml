<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151D3C"
    tools:context=".iNSTRUCTIOBS">

    <TextView
        android:id="@+id/photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="665dp"
        android:text="Instructions"
        android:textColor="#E4A81B"
        android:textSize="30sp"
        app:fontFamily="@font/press_start_2p"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="359dp"
        android:layout_height="79dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:text="1. Click on the start button to take you to the main navigation page."
        android:textColor="#DAD2D2"
        android:textSize="19sp"
        app:fontFamily="@font/russo_one"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="359dp"
        android:layout_height="79dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="2.  When on campus head in the direction of the nearest star"
        android:textColor="#DAD2D2"
        android:textSize="19sp"
        app:fontFamily="@font/russo_one"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="314dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="359dp"
        android:layout_height="79dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="3. As you get close, hints and distance notifications will appear"
        android:textColor="#DAD2D2"
        android:textSize="19sp"
        app:fontFamily="@font/russo_one"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="392dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="362dp"
        android:layout_height="156dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Welcome! The purpose of this app is to get you to explore our beautiful campus through a scavenger hunt. In order to do that, please refer to the instructions below:"
        android:textColor="#DAD2D2"
        android:textSize="19sp"
        app:fontFamily="@font/russo_one"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="106dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="359dp"
        android:layout_height="79dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="4. Once you reach the star location click on the camera icon to take a photo of the QR code"
        android:textColor="#DAD2D2"
        android:textSize="19sp"
        app:fontFamily="@font/russo_one"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="461dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="359dp"
        android:layout_height="79dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="5. Click on the location icon to see the unlocked fact (and unlocked icon once you level up) "
        android:textColor="#DAD2D2"
        android:textSize="19sp"
        app:fontFamily="@font/russo_one"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="559dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="359dp"
        android:layout_height="79dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="6. Repeat with the next star location!"
        android:textColor="#DAD2D2"
        android:textSize="19sp"
        app:fontFamily="@font/russo_one"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="654dp" />
</androidx.constraintlayout.widget.ConstraintLayout>